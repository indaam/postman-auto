{
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "off",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "node_modules": true
  },
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
  },
  "[javascript]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "prettier"
  },
  "[json]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "prettier"
  }
}
